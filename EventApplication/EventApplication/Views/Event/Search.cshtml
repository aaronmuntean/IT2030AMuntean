@model IEnumerable<EventApplication.Models.Event>

<div id="search-results">
    <table>
        <tr>
            <th>Event</th>
            <th>Start Date</th>
            <th>Location</th>
        </tr>
        
        @foreach (var item in Model) {
            <tr>
                <td>@Html.ActionLink(item.Title, "Details", new { id = item.Id })</td>
                <td>@item.StartDateTime.ToShortDateString()</td>
                <td>@item.LocationCity, @item.LocationState</td>
            </tr>
        }
    </table>
</div>