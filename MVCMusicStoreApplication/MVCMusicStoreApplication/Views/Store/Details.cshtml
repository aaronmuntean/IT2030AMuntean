@model MVCMusicStoreApplication.Models.Album
@{
    ViewBag.Title = "Details";
}

<br /><br /><br />
<h3>Details</h3>

<div>
    <h2>@Model.Title</h2>
    <img src="@Model.AlbumArtUrl" alt="@Model.Title  album art" />
    <p>Artist: @Model.Artist.Name</p>
    <p>Price: @Model.Price</p>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <a href="~/ShoppingCart/AddToCart/@Model.AlbumId"><input type="submit"value="Add to Cart" class="btn btn-default" /></a>
        </div>
    </div>
</div>